<div class="card" style="max-width: 25%">
    <img src="{{ asset('pictures/pets/' ~ pet.picture) | imagine_filter('medium') }}" class="card-img-top w-100"
         alt="{{ pet.name }}">
    <div class="card-body">
        <h5 class="card-title m-auto">
            <a href="{{ path('pet_show' , {id: pet.id}) }}">{{ pet.name }}</a>
        </h5>
        <p class="card-text">{{ pet.excerpt }}</p>
        <hr>
        <a href="{{ path('pet_show' , {id: pet.id}) }}" class="btn btn-info">Voir son profil</a>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <small class="text-muted">Vit avec {{ pet.owner }}</small>
        <a href="{{ path('meeting', {userid: app.user.id , petid: pet.id, ownerid : pet.owner.id}) }}"
           class="btn btn-success d-inline">Trouv√© !</a>
    </div>
</div>