{% extends 'base.html.twig' %}

{% block title %}PetsCare | {{ pet.name }}{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid m-auto p-4">
        <div class="row">
            <div class="col-md-6">
                {% for picture in pet.pictures %}
                    <div class="col" style="width: auto; flex: none; margin: 5px">
                        <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('medium') }}"
                             alt="{{ pet.name }}" class="rounded">
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-6" style="text-align: right">
                <h1>{{ pet.name }}</h1>
                <h2><img src="{{ asset(pet.speciesIcon) }}" alt="{{ pet.speciesString }}" class="pcIcon">
                    - {{ pet.speciesString }} <br> {{ pet.genderString }}
                    - {{ pet.age }} {{ pet.age > 1 ? 'ans' : 'an' }}
                </h2>
                {% if pet.owner %}
                    <p>{{ pet.genderPronoun }} vit avec {{ pet.owner.username }}</p>
                {% endif %}
                <p>{{ pet.genderPronoun }} est inscrit{{ pet.gender is same as 0 ? 'e' : ''}} depuis le {{ pet.createdAt | date('d/m/Y') }}</p>
                <a href="{{ path('pet_edit', {'id': pet.id}) }}" class="btn btn-success">Modifier les informations</a>
                {{ include('pet/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    <div class="container bg-light p-4">
        <div class="row">
            <div class="col-md-8">
                <h2>A propos de {{ pet.name }}</h2>
                <p>{{ pet.description }}</p>
            </div>
            <div class="col-md-4">
                <h3>Signes particulier</h3>
                <ul class="list-group">
                    {% for tag in pet.tags %}
                        <li class="list-group-item">{{ tag.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
