{% extends 'base.html.twig' %}

{% block title %}PetsCare | {{ pet.name }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/slick.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/slick-theme.css') }}"/>
{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid m-auto p-4">
        <div class="row">
            <div class="col-md-6 pc-pet-carousel">
                {% for picture in pet.pictures %}
                    <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('medium') }}"
                         alt="{{ pet.name }}" class="rounded">
                {% endfor %}
            </div>
            <div class="col-md-6" style="text-align: right">
                <h1>{{ pet.name }}</h1>
                <h2><img src="{{ asset(pet.speciesIcon) }}" alt="{{ pet.speciesString }}" class="pcIcon">
                    - {{ pet.speciesString }} <br> {{ pet.genderString }}
                    - {{ pet.age }} {{ pet.age > 1 ? 'ans' : 'an' }}
                </h2>
                {% if pet.owner %}
                    <p>{{ pet.genderPronoun }} vit avec {{ pet.owner.username }}</p>
                {% endif %}
                <p>{{ pet.genderPronoun }} est inscrit{{ pet.gender is same as 0 ? 'e' : '' }} depuis
                    le {{ pet.createdAt | date('d/m/Y') }}</p>
                {% if app.user.id is same as pet.owner.id %}
                    {% if pet.isMissing is same as true %}
                        {{ form_start(form, {'attr' : {'style' : 'display:inline;'}}) }}
                        {{ form_row(form.isBack, {'attr': {'onclick': 'return confirm("En confirmant, votre compagnon sera retir√© de la liste des animaux disparus, vous confirmer ?")'}}) }}
                        {{ form_end(form) }}
                    {% endif %}
                    <a href="{{ path('pet_edit', {'id': pet.id}) }}" class="btn btn-success">Modifier les
                        informations</a>
                    {{ include('pet/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="container bg-light p-4">
        <div class="row">
            <div class="col-md-8">
                <h2>A propos de {{ pet.name }}</h2>
                <p>{{ pet.description }}</p>
            </div>
            <div class="col-md-4">
                <h3>Signes particulier</h3>
                <ul class="list-group">
                    {% for tag in pet.tags %}
                        <li class="list-group-item">{{ tag.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('build/js/slick.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.pc-pet-carousel').slick({
                accessibility: false,
                autoplay: true,
                autoplaySpeed: 3000,
                dots: true,
                cssEase: 'ease',
                fade: true
            });
        });
    </script>
{% endblock %}
