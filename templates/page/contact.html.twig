{% extends 'base.html.twig' %}

{% block title %}PetsCare | Contact{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid pb-0 bg-transparent">
        <div class="row m-auto p-4">
            {# LEFT SECTION #}
            <div class="col-md-6 text-center">
                <h1 class="pc-f-f">Discutons !</h1>
                <p>Une idée ? Une demande ? Une suggestion ?<br>
                    Remplissez le formulaire ci-contre et je vous répondrai dans les plus bref délai !</p>
                <div class="row d-flex align-items-center text-center text-secondary">
                    <div class="col">
                        <i class="fas fa-envelope"></i><br>
                        martinez.m.joe@hotmail.fr
                    </div>
                    <div class="col">
                        <i class="fas fa-phone"></i><br>
                        +33688870112
                    </div>
                    <div class="col">
                        <i class="fas fa-map-marker"></i><br>
                        Unknown Street, 88888
                    </div>
                </div>
            </div>
            {# END LEFT SECTION #}

            {# RIGHT SECTION #}
            <div class="col-md-6 rounded bg-primary pc-paws p-4">
                {{ form_start(form) }}
                <div class="row m-auto">
                    <div class="col">{{ form_row(form.name) }}</div>
                    <div class="col">{{ form_row(form.email) }}</div>
                    <div class="col">{{ form_row(form.phone) }}</div>
                </div>
                <div class="row m-auto">
                    <div class="col">{{ form_row(form.message) }}</div>
                </div>
                <div class="row m-auto d-flex justify-content-center">
                    <button type="submit" class="btn btn-sm btn-secondary border-light">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
            {# END RIGHT SECTION #}
        </div>
    </div>
{% endblock %}

