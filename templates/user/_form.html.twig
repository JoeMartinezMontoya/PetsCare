{{ form_start(form) }}
<div class="row justify-content-center">
    <div class="col-md-3">{{ form_row(form.firstname) }}</div>
    <div class="col-md-3">{{ form_row(form.lastname) }}</div>
</div>
<div class="row justify-content-center">
    <div class="col-md-3">{{ form_row(form.username) }}</div>
    <div class="col-md-3">{{ form_row(form.birthdate) }}</div>
</div>
<div class="row justify-content-center">
    <div class="col-md-3">{{ form_row(form.email) }}</div>
    <div class="col-md-3">{{ form_row(form.phone) }}</div>
</div>
<div class="row justify-content-center">
    <div class="col">
        {{ form_row(form.isPetsitter) }}
    </div>
</div>
<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
