{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container mt-4">
        <h1>Inscription</h1>

        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">{{ form_row(registrationForm.username) }}</div>
                    <div class="col-md-6">{{ form_row(registrationForm.firstname) }}</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">{{ form_row(registrationForm.lastname) }}</div>
                    <div class="col-md-6">{{ form_row(registrationForm.email) }}</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">{{ form_row(registrationForm.plainPassword) }}</div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">M'inscrire</button>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}